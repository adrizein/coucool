{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "baseUrl": "src",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "typeRoots": [
        "node_modules/@types"
    ],
    "lib": [
        "es2016",
        "dom"
    ]
  },
  "include": [
  	  "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
