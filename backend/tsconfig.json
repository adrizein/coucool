{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "sourceMap": true,
    "outDir": "build",
    "noImplicitAny": true,
    "baseUrl": "src",
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
        "node_modules/@types"
    ],
    "lib": [
        "es2016",
        "dom"
    ]
  },
  "include": [
  	  "src",
  	  "test"
  ],
  "exclude": [
    "node_modules"
  ]
}
